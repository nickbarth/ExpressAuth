extends layout

block mainContent
  h2 Account

  form(action='/members/account', method='post')
    fieldset
      legend Update your settings.
      label Email
      input(name='email', value=currentUser.email, placeholder='me@example.com', type='text')
      label Password
      input(name='password', value='', placeholder='******', type='password')
      input(type='hidden', name='_csrf', value=csrf)
      label
        button.btn.btn-primary(type='submit') Update Settings
