extends layout

block navSelect
  - var nav = { reset: 'active' }

block mainContent
  h2 Reset Password

  form(action='/reset', method='post', 'data-autosave'='true')
    fieldset
      legend Set a new password.
      label Password
      input(name='password', value='', placeholder='******', type='password')
      input(type='hidden', name='_csrf', value=csrf)
      label
        button.btn.btn-primary(type='submit') Set Password
